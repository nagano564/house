<div class="container">
  <p id="show"><strong>Address:</strong> <%= @house.address %></p>
  <p id="show"><b>Cost of House:</b><%= @house.cost %></p>
  <p id="show"><b>Down payment amount:</b><%= @house.down_payment %></p>
  <p id="show"><b>Loan Interest:</b> <%= @house.interest %></p>
  <p id="show"><b>Loan Period: </b><%= @house.period %></p>
  <p id="show"><b>Local property taxes: </b><%= @house.taxes %></p>


<%= link_to "Edit", edit_user_house_path(current_user.id, @house), class: 'btn btn-success' %>
